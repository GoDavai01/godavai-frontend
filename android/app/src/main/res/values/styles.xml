<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App theme after splash -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Android 12+ Splash -->
    <style name="LaunchTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gd_deep_green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_pill_rotate</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/gd_deep_green</item>

        <!-- Fallback for pre-Android 12 -->
        <item name="android:windowBackground">@drawable/splash_legacy</item>

        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

</resources>
